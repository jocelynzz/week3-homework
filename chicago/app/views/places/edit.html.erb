<h4>Edit a Place </h4>
<form action="/places/<%= @place.id %>/update">
	Title: <input type="text" name="title" value="<%= @place.title %>"><br>
	<br>
	Photo Url: <input type="text" name="photo_url" value="<%= @place.photo_url%>" ><br>
	<br>
	Price: <input type="text" name="price" value="<%= sprintf('%.2f', (@place.price / 100.00)) %>"><br>
	<br>
	Description: 
	<br><textarea rows="5" cols="60" name="description" > <%= @place.description %> </textarea>
	<br>
	<input type="submit" value="Submit" 
	name="Submit" />
</form>
